<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <GridLayout
        android:id="@+id/btn_silent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="1"
        android:useDefaultMargins="true"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/btn_silent_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bell_slash_thin_svgrepo_com"
            android:layout_gravity="center"
            app:tint="@color/white"
            android:contentDescription="@string/iconSilent" />
        <TextView
            android:id="@+id/btn_silent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textBtnSilent"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_gravity="center"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>