<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:dither="false">

            <corners android:radius="32dp" />

            <gradient
                android:angle="90"
                android:endColor="#00000000"
                android:startColor="#10000000" />

        </shape>

    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape>

            <solid android:color="#EF881F1F" />

            <corners android:radius="32dp" />

        </shape>
    </item>
</layer-list>